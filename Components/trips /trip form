
import React, { useState } from 'react';
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Button } from "@/components/ui/button";
import { Textarea } from "@/components/ui/textarea";
import { Save, X } from "lucide-react";
import { motion } from "framer-motion";

export default function TripForm({ trip, onSubmit, onCancel }) {
  const [formData, setFormData] = useState(trip || {
    date: new Date().toISOString().split('T')[0],
    distance_km: '',
    fuel_consumed: '',
    fuel_cost: '',
    start_location: '',
    end_location: '',
    notes: '',
    odometer_reading: ''
  });

  const handleSubmit = (e) => {
    e.preventDefault();
    onSubmit({
      ...formData,
      distance_km: parseFloat(formData.distance_km) || 0,
      fuel_consumed: parseFloat(formData.fuel_consumed) || 0,
      fuel_cost: parseFloat(formData.fuel_cost) || 0,
      odometer_reading: parseFloat(formData.odometer_reading) || 0
    });
  };

  return (
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      className="max-w-2xl mx-auto"
    >
      <Card className="bg-white/90 backdrop-blur-sm border-slate-200 shadow-xl">
        <CardHeader className="bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-t-lg">
          <CardTitle className="text-xl">
            {trip ? 'Edit Trip' : 'Log New Trip'}
          </CardTitle>
        </CardHeader>
        <CardContent className="p-6">
          <form onSubmit={handleSubmit} className="space-y-6">
            <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div className="space-y-2">
                <Label htmlFor="date" className="text-slate-700">Trip Date</Label>
                <Input
                  id="date"
                  type="date"
                  value={formData.date}
                  onChange={(e) => setFormData({ ...formData, date: e.target.value })}
                  className="border-slate-300 focus:border-blue-500"
                />
              </div>
              <div className="space-y-2">
                <Label htmlFor="distance_km" className="text-slate-700">Distance (km)</Label>
                <Input
                  id="distance_km"
                  type="number"
                  step="0.1"
                  placeholder="0.0"
                  value={formData.distance_km}
 